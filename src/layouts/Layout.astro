---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='./images/favicon-32x32.png' />
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Open+Sans&family=Raleway:wght@400;700&display=swap'
			rel='stylesheet'
		/>
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		--VeryDarkBlue: hsl(243, 87%, 12%);
		--DesaturatedBlue: hsl(238, 22%, 44%);
		--BrightBlue: hsl(224, 93%, 58%);
		--BrightBlueHover: hsl(224, 89%, 72%);
		--ModerateCyan: hsl(170, 45%, 43%);
		--ModerateCyanHover: hsl(170, 48%, 62%);
		--LightGrayishBlue: hsl(240, 75%, 98%);
		--LightGray: hsl(0, 0%, 75%);
		--white: #fff;
		--error : #FF9494;
		--errorText : #ff4141;

		--opensSans: 'Open Sans', sans-serif;
		--raleway: 'Raleway', sans-serif;
	}

	html {
		scroll-behavior: smooth;
	}

	body {
		font-family: var(--raleway);
		margin: 0;
		padding: 0;
	}

	p {
		font-family: var(--opensSans);
	}

	img {
		width: 100%;
	}
</style>
